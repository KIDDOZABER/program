<!--pages/paySuccess/paySuccess.wxml-->
<scroll-view scroll-y class="scrollPage">
  <view>
    <nav-bar>
      <text slot="content">订单支付成功</text>
    </nav-bar>
  </view>
  <view class="cu-bar flex-direction bg-gray">
    <view class="ml-payResult flex justify-center padding-top-xl">
      <view class="ml-pay-img">
        <image src="https://s3.ax1x.com/2021/01/21/s4g2nS.png"></image>
      </view>
    </view>
    <view class="text-bold text-xl text-black margin-top-xl">订单支付成功</view>
    <view class="text-black margin-top-xl">订单金额: <span class="text-bred">￥{{totalPrice}}</span></view>
    <view class="flex margin-top-xl">
      <view class="bg-white padding-sm margin-right-xl" bindtap="gotoOrder">查看订单</view>
      <view class="bg-white padding-sm" bindtap="gotoHome">返回首页</view>
    </view>

  </view>
</scroll-view>