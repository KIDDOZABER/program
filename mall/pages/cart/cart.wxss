/* pages/plugin/home/home.wxss */
.ml-emptyCart {
  width: 100%;
  height: 100%;
  flex-direction: column;
}

.ml-emptyCart-img {
  width: 543rpx;
  height: 291rpx;
}

.ml-cart-img {
  width: 200rpx;
  height: 200rpx;
  flex-shrink: 0;
  background-color: #a0dfe2;
}

.ml-cart-img image {
  width: 100%;
  height: 100%;
}

.ml-cart-brief {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  width: 0;
}

.ml-cart-op {
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 10;
}

.ml-cart-btn {
  width: 30rpx !important;
  height: 20rpx;
  padding: 10rpx !important;
}

button::after {
  border: none;
}
/* 编辑 top*/
.ml-cart-edit {
  background: #fff;
  padding: 10rpx 32rpx;
  margin-top: 20rpx;
  z-index: 999;
  box-shadow: 0 5rpx 10rpx #ccc;
}
/* 完成footer */
.ml-cart-border{
  border: 1px solid #ccc;
  margin-left: 40rpx;
}

