/* pages/about/home/home.wxss */
.ml-my-bg {
  position: absolute;
  width: 100%;
  height: 486rpx;
}

.ml-myInfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.ml-username {
  font-size: 48rpx;
  color: #fff;
}
.ml-loginstatus {
  font-size: 24rpx;
  margin-top: 12rpx;
  color: #ccc;
}

.ml-layout {
  justify-content: space-around;
  border-top-right-radius: 24rpx;
  border-top-left-radius: 24rpx;
  border-bottom-right-radius: 18rpx;
  border-bottom-left-radius: 18rpx;
}
.ml-cu-item {
  width: 25%;
  text-align: center;
}
.ml-cu-item text {
  display: block;
  margin-top: 16rpx;
  font-size: 50rpx;
  line-height: 40rpx;
}
.ml-cu-item text:nth-child(2) { font-size: 24rpx; }