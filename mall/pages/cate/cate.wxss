/* pages/component/home/home.wxss */
.ml-cate-all {
  position: relative;
}

.ml-cate-box {
  width: 250rpx;
  border-right: 2rpx solid #ffffff;
}

.ml-cate-item-outer {
  border-bottom: 2rpx solid #ffffff;
}

.ml-cate-item {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.ml-cate-content {
  background-color: #fff;
}

.ml-cate-content-item {
  width: 175rpx;
}

.ml-cate-content-item-img {
  width: 148rpx;
  height: 148rpx;
}
.ml-cate-content-item-img image {
  width: 100%;
  height: 100%;
}

.ml-cate-content-item-text {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
